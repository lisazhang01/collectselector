extends layout

block content
  section
    .container
      .row
        .col-sm-3
          .left-sidebar
            h2 Profile
            #accordian.panel-group.search-options
              .panel.panel-default
                .panel-heading#profile
                  h2
                    a(href='#') My Test Scores
                  h2
                    a(href='#') My Portfolio
                  h2
                    a(href='#') My PS
                  h2
                    a(href='#') My Applications
                  h2
                    a(href='#') My Career
        .col-sm-9.padding-right
          .search-results
            h2.title.text-center My College
            - for (var i=0; i < shortlist.length; i++) {
              .col-sm-4.college("data-id"=shortlist[i]._id)
                .college-wrapper
                  .single-uni
                    .college-info.text-center
                      img(src='../images/col-img-01.jpeg', alt='')
                      h2#name=shortlist[i]['name']
                      p#address=shortlist[i]['address']
                      p#url=shortlist[i]['url']
                  .delete
                    ul.nav.nav-pills.nav-justified
                      li
                        a(href='#')
                          i.fa.fa-trash-o
                          | Delete
            - }
          .col-sm-12.text-center
            ul.pagination
              li
                a(href='#') 1
              li
                a(href='#') 2
              li
                a(href='#') 3
              li
                a(href='#') 4
              li
                a(href='#') 5
